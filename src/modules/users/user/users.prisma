model User {
   id        Int      @id @default(autoincrement())
   createdAt DateTime @default(now()) @map("created_at")
   email     String   @unique @map("email")
   FirstName String? @map("first_name")
   LastName  String? @map("last_name")
   Password  String @map("password")
   role      Role     @default(USER)
   Status    Status @default(ACTIVE) @map("status")
   FilmIndustry  FilmIndustry @default(KA) @map("film_industry")
}

enum Role {
   USER
   ADMIN
   PENMEN
}

enum Status{
   ACTIVE
   INACTIVE
}

enum FilmIndustry{
   KA 
   TA
   TE
   MA
}

model Biography {
  id                      Int      @id @default(autoincrement())
  AboutMe                  String? @map("about_me")
  Education               String? @map("education")
  InstituteName           String? @map("institute_name")
  StartDate               DateTime? @map("start_date")
  EndDate                 DateTime? @map("end_date")
  Skillset                String? @map("skillset")
  WorkingAtLocation       String? @map("working_at_location")
  UploadPortfolioPictures String? @map("upload_portfolio_pictures")
  PersonnelShowreel       String? @map("personnel_showreel")
  Awards                  String? @map("awards")
  AwardName               String? @map("award_name")
  AwardCategory           String? @map("award_category")
  Result                  String? @map("result")
  UserId                  Int @map("user_id")
  user                    User     @relation(fields: [UserId], references: [id])
  FilmIndustry  FilmIndustry @default(KA) @map("film_industry")
}

model PersonalInformation {
  id                                      Int      @id @default(autoincrement())
  FirstName                               String? @map("first_name")
  LastName                                String? @map("last_name")
  UploadYourPassportPicture               String? @map("upload_your_passport_picture")
  WhatOtherNamesYouAreCalledInTheIndustry String? @map("what_other_names_you_are_called_in_the_industry")
  DateOfBirth                                     DateTime? @map("date_of_birth")
  Address                                 String? @map("address")
  EmailId                                 String? @map("email_id")
  ContactNumber                           Int? @map("contact_number")
  WhatsappNumber                          Int? @map("whatsapp_number")
  Gender             String? @map("gender")
  WhenDidYouStartWorkingInTheIndustry  DateTime? @map("when_did_you_start_working_in_the_industry")
  WhoIntroducedYouToTheFilmIndustry String? @map("who_introduced_you_to_the_film_industry")
  Give2ReferencesAndContactsFromTheFilmIndustry  String? @map("give_2references_and_contacts_from_the_film_industry")
  UserID Int @map("uer_id")
  user          User   @relation(fields: [UserID], references: [id])  
  FilmIndustry  FilmIndustry @default(KA) @map("film_industry")
}

model MediaLinks{
   id                      Int      @id @default(autoincrement()) 
   FacebookAccountUrl   String? @map("facebook_account_url")
InstagramAccountUrl  String? @map("instagram_account_url")
LinkedinAccountUrl   String? @map("linkedin_account_url")
TwitterAccountUrl    String? @map("twitter_account_url")
UserId                  Int @map("user_id")
  user                    User     @relation(fields: [UserId], references: [id])
  filmindustry  FilmIndustry @default(KA)  @map("film_industry")
}